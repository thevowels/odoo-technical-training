<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="Estate_type_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="Estate_type_view_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="action" name="%(estate.Estate_offer_action)d" string="" icon="fa-book">
                            <div class="o_stat_info">
                                <span class="o_stat_value">
                                    <field name="offer_count"/>
                                </span>
                                <span class="o_stat_text">
                                    Offers
                                </span>
                            </div>

                        </button>
                    </div>
                    <div>
                    <h1><field name="name"/></h1>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <tree default_order="expected_price desc">
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="Estate_type_view_tree" model="ir.ui.view">
        <field name="name">estate.property.type.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <tree string="Channel">
                        <field name="sequence" widget="handle"/>
                        <field name="name"/>
                    </tree>
                </sheet>
            </form>
        </field>
    </record>
</odoo>