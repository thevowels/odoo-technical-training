<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search blah">
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"
                    filter_domain="[('living_area','>=', self)]"/>
                <field name="facades"/>
                <separator/>
                <filter string="Include archived" name="archived" domain="['|', ('active', '=', True), ('active', '=', False)]"/>
                <filter string="Available" name="available" domain="['|',('state','=', 'new'),('state', '=', 'received')]"/>
                <filter string="With Graden" name="gargen" domain="[('garden','=',True)]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode','residual_visible':True}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <button name="sold_action" type="object" string="Sold" states="new,received,accepted"/>
                    <button name="cancel_action" type="object" string="Cancel" states="new,received,accepted"/>
                    <field name="state" string="status" widget="statusbar" statusbar_visible="new,received,accepted,sold"/>

                </header>
                <sheet>

                    <h1><field name="name"/></h1>
                    <group col="5">
                        <group colspan="2">
                            <field name="tag_ids" widget="many2many_tags" options="{'no_create':true , 'color_field': 'color', 'no_edit_color': true}"/>
                            <field name="postcode" />
                            <field name="date_availability" string="Available From"/>
                            <field name="property_type_id" options="{'no_create':true}"/>
                        </group>
                        <div></div>
                        <group colspan="2">
                            <field name="expected_price"/>
                            <field name="best_price" string="Best Offer"/>
                            <field name="selling_price" />
                        </group>
                    </group>
                    <separator/>
                    <separator/>
                    <notebook>
                        <page string="Description">
                            <group col="4" >
                                <field name="description"/>
                                <field name="bedrooms" />
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" attrs="{'invisible': [('garden','=',False)]}"/>
                                <field name="total_area" string="Total Area (sqm)"/>
                                <field name="garden_orientation" attrs="{'invisible': [('garden','=',False)]}" />
                                <field name="active"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                                <field name="offer_ids" attrs="{'readonly': [('state','in' , ['accepted','sold','canceled'])]}" />
                            </group>
                        </page>
                        <page string="Other Info">
                            <group col="4">
                                <field name="salesperson_id" string="Salesman"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel" decoration-success="state in ['accepted','received']" decoration-bf="state == 'accepted'" decoration-muted="state == 'sold'" >
                <field name="state" invisible="1"/>
                <field name="name" string="Title"/>
                <field name="property_type_id" options="{'no_create':true}"/>
                <field name="postcode"/>
                <field name="tag_ids" widget="many2many_tags" options="{'no_create':true , 'color_field': 'color', 'no_edit_color': true}"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" string="Available From" optional="True"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_available':True}</field>
        <field name="help" type="html">
          <p>
            Define new property
          </p><p>
            Don't worry about this page its because there is no objects created.
          </p><p>
            With Best Regards
          </p>
        </field>
    </record>




    
</odoo>